{
  "manifest_version": 3,
  "name": "Consent Mode Helper",
  "version": "2.0",
  "description": "Validate your Consent Mode implementations (Google Consent Mode, Microsoft UET Consent Mode, Microsoft Clarity Consent,...)",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}